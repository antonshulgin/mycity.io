*
	box-sizing border-box

.hidden
	display none

body
	background #fff center fixed no-repeat
	background-image url(../img/intro/01.jpg)
	background-size cover
	color #111
	font 400 11pt/1 'Open Sans', sans-serif
	text-align center

h1,
h2
	font-weight 300
	letter-spacing -0.05em
	margin 0

h1
	font-size 3em

h2
	font-size 2em

p,
ul
	line-height 1.5
	margin 1em 0

section
	background rgba(#fff, .9)
	color #111
	overflow hidden
	position relative

.section-content
	margin auto
	padding 100px 50px
	position relative
	width 1000px
