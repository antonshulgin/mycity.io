#sectionPricingPlans
	background rgba(12,24,24, .9)
	color #fff

	.section-content
		width 900px

	.pricing-plans
		margin 100px 0 0
		overflow hidden

	.pricing-plan
		background rgba(0,0,0, .1)
		border-radius 20px
		box-shadow inset 0 0 0 1px rgba(255,255,255, .6)
		float left
		margin 10px
		padding 20px
		transition background .3s ease
		width 380px

		&:hover
			background rgba(0,0,0, .3)

	.pricing-features

		> li
			margin 1em 0

	.unavailable
		opacity .3
		text-decoration line-through

	.trigger-select-plan
		background transparent
		border-radius 5px
		box-shadow inset 0 0 0 1px #fff
		color #fff
		display block
		font-size 2em
		font-weight 300
		height 2em
		letter-spacing -.05em
		line-height 1.85em
		margin 1em 0 0
		text-decoration none
		transition background .6s ease, color .6s ease
		white-space nowrap

		&:hover
			background #fff
			color #000
