#header
	font-weight 300
	height 100vh
	min-height 500px
	overflow hidden
	position relative

	.section-content
		background rgba(#fff, .9)
		border-radius 1000px
		height 400px
		left 50%
		line-height 400px
		padding 0
		position absolute
		top 50%
		transform         translate(-50%, -50%)
		-webkit-transform translate(-50%, -50%)
		width 400px

	h1
		font-size 2.5em
		margin .5em 0

	p
		margin 0

	.intro
		display inline-block
		line-height 1
		margin-top -1.5em
		vertical-align middle

	.header-logo
		display block
		margin auto
