#sectionDemo
	background rgba(224,0,64, .9)
	color #fff

	.section-content
		padding-bottom 0

	.link-demo
		display block
		margin 100px auto 0
		position relative

		&:before
		&:after
			background transparent
			border-radius 1000px
			content ''
			left 50%
			opacity 0
			position absolute
			top 270px
			transition all .6s ease
			z-index 1

		&:before
			background rgba(224,0,64, 1)
			color #fff
			content 'Try it!'
			font-size 5em
			font-weight 300
			height 300px
			letter-spacing -.05em
			line-height 295px
			transform         translate(-50%, -50%) scale(0)
			-webkit-transform translate(-50%, -50%) scale(0)
			width 300px

		&:after
			box-shadow 0 0 0 150px #fff
			height 320px
			transform         translate(-50%, -50%) scale(2)
			-webkit-transform translate(-50%, -50%) scale(2)
			width 320px

		&:hover:before
			opacity .9
			transform         translate(-50%, -50%) scale(1)
			-webkit-transform translate(-50%, -50%) scale(1)

		&:hover:after
			opacity .3
			transform         translate(-50%, -50%) scale(1)
			-webkit-transform translate(-50%, -50%) scale(1)

		img
			display block
			width 100%

